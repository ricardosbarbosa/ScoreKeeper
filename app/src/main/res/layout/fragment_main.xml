<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.ricardosbarbosa.scorekeeper.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView android:id="@+id/textViewLeft" style="@style/Score" tools:text="1000"/>
        <TextView android:id="@+id/textViewRight" style="@style/Score"  tools:text="1000"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_left"
        app:srcCompat="@android:drawable/ic_input_add"
        style="@style/ScoreButton.Left" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_right"
        app:srcCompat="@android:drawable/ic_input_add"
        style="@style/ScoreButton.Right" />
</RelativeLayout>
